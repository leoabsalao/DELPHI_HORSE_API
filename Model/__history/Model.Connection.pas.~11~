function SetupConnection(FConn: TFDConnection): String;
var
  arq_ini: string;
  ini: TInifile;
begin
  try
    try
      arq_ini := GetCurrentDir + '\ServerHorse.ini';
      if not FileExists(arq_ini) then
      begin
        Result := 'Arquivo INI não encontrado: '+arq_ini;

      end;


    finally

    end;
  finally

  end;

